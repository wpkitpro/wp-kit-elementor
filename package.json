{
	"name": "wp-kit-elementor",
	"slug": "wp-kit-elementor",
	"homepage": "https://wpkit.pro",
	"version": "1.0.4",
	"description": "A sample WordPress theme for Elementor page builder.",
	"repository": "https://github.com/wpkitpro/wp-kit-elementor.git",
	"author": "wpkit",
	"license": "GNU General Public License v3 or later",
	"private": true,
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"engines": {
		"node": ">=16.19.0"
	},
	"scripts": {
		"update-version": "node .github/scripts/update-version-in-files.js",
		"start": "chokidar \"**/*.scss\" -c \"npm run build\" --initial",
		"build:style": "sass assets/sass/style.scss:style.css --style=expanded --source-map && sass assets/sass/style.scss:style.min.css --style compressed --no-source-map",
		"build:style-editor": "sass assets/sass/style-editor.scss:style-editor.css --style=expanded --source-map && sass assets/sass/style-editor.scss:style-editor.min.css --style compressed --no-source-map",
		"build:stylelint": "stylelint **/*.css --fix --config .stylelintrc-css.json",
		"build": "run-s \"build:*\"",
		"watch": "chokidar \"**/*.scss\" -c \"npm run build\" --initial",
		"lint:scss": "stylelint **/*.scss",
		"lint-fix:scss": "stylelint **/*.scss --fix",
		"bundle": "dir-archiver --src . --dest ../wp-kit-elementor.zip --exclude .DS_Store node_modules .editorconfig .eslintrc.js .gitattributes .gitignore .prettierrc .stylelintrc.json mix-manifest.json package.json style.scss style-editor.scss webpack.mix.js yarn.lock package-lock.json .git .gitattributes .gitignore README.md LICENSE"
	},
	"devDependencies": {
		"@wordpress/browserslist-config": "^5.31.0",
		"@wordpress/eslint-plugin": "^17.5.0",
		"@wordpress/stylelint-config": "^21.31.0",
		"autoprefixer": "^10.4.16",
		"chokidar-cli": "^3.0.0",
		"dir-archiver": "^2.1.0",
		"eslint": "^8.56.0",
		"minimist": "^1.2.8",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.33",
		"postcss-calc": "^9.0.1",
		"postcss-cli": "^11.0.0",
		"postcss-css-variables": "^0.19.0",
		"postcss-custom-media": "^10.0.2",
		"postcss-discard-duplicates": "^6.0.1",
		"postcss-focus-within": "^8.0.1",
		"postcss-merge-rules": "^6.0.3",
		"postcss-nested": "^6.0.1",
		"rtlcss": "^4.1.1",
		"sass": "^1.69.7",
		"stylelint": "^14.16.1",
		"stylelint-config-recommended-scss": "^14.0.0"
	}
}
